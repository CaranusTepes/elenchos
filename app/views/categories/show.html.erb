<div class="category-show-id">
    <div class="category-show-top">
      <div class="category-show-left"> <%= current_user.email %> </div>
      <div class="category-show-middle"> <%= @category.title %> </div>
      <div class="category-show-right">
        <%= link_to image_tag "setting.png", class: "buttons"%>
        <%= link_to image_tag("logout.png", :class => "buttons"), destroy_user_session_path, method: :get %>
      </div>
    </div>
    <div class="category-id-bottom">
      <div class="category-show-list">
        <div class="catId-details"> <%= @category.details %> </div>
        <% @tasks.each do |tasks| %>
        <div class="category-id-tasks">
          <div class="catId-task-title"> <%= tasks.title %> </div>
          <div class="catId-task-due"> <%= tasks.due %> </div>
          <div class="catId-task-fin"> <%= tasks.fin %> </div>
        </div>
        <% end %>
        <div class="catID-created"> <%= @category.created_at %> </div>
      </div>
    </div>
</div>